%h1 タスク一覧

.mb-3
%table.table.table-hover
  %thead
    %tr
      %th= Task.human_attribute_name(:name)
      %th= Task.human_attribute_name(:created_at)
      %th
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to task.name, task_path(task)
        %td= l(task.created_at, format: :long)
        %td
          = link_to '編集', edit_task_path(task), class: 'btn btn-sm btn-outline-info mr-3'
          = link_to '削除', task, method: :delete, data: { confirm: "【#{task.name}】を削除してよろしいですか？"}, class: 'btn btn-sm btn-outline-secondary mr-3'


= link_to 'タスクを作成する', new_task_path, class: 'btn btn-outline-info'
